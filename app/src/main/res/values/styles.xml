<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Commons Themes Overlays -->

    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Custom Styles-->

    <style name="TextAppearance.CardContent.Headline.Medium" parent="">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="TextAppearance.CardContent.Headline.ExtraInfo.Medium" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CardContent.FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/accent_dark</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textStyle">normal</item>
        <item name="colorControlHighlight">@color/accent_light</item>
    </style>

</resources>
